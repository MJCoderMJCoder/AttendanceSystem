            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AttendanceActivity"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".activity.SignInActivity"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".activity.SignOutActivity"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".activity.AdminLoginActivity"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".activity.StaffManageActivity"
            android:launchMode="singleTop">
        </activity>
        <activity android:name=".activity.NewEmployeeActivity">
        </activity>
        <activity android:name=".activity.AttendanceDataExportActivity">
        </activity>
        <activity android:name=".activity.NativeViewActivity">
        </activity>
    </application>

</manifest>