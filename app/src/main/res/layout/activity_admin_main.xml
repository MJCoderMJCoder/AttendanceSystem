<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lzf.attendancesystem.activity.AdminMainActivity">

    <TextView
        android:id="@+id/topTxt"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="纸纷飞管理员欢迎您"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topTxt"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/systemSetTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_rectangle"
            android:onClick="onClick"
            android:text="设置系统时间"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/staffManage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_rectangle"
            android:onClick="onClick"
            android:text="员工管理"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/attendanceDataExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_rectangle"
            android:onClick="onClick"
            android:text="考勤数据导出"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/attendanceTimeManage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_rectangle"
            android:onClick="onClick"
            android:text="考勤时间管理"
            android:textColor="@android:color/white"
            android:visibility="gone"/>

        <Button
            android:id="@+id/modifyAccountInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_rectangle"
            android:onClick="onClick"
            android:text="修改账号信息"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</RelativeLayout>
